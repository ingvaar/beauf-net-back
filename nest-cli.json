{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true
        }
      }
    ],
    "assets": [
      {
        "include": "services/mail/templates/**/*",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true
  }
}
