		"@nestjs/jwt": "^7.2.0",
		"@nestjs/swagger": "^4.7.5",
		"@nestjs/testing": "^7.6.15",
		"bcrypt": "^5.0.0",
		"class-transformer": "^0.4.0",
		"class-validator": "^0.13.1",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"express": "^4.17.1",
		"morgan": "^1.10.0",
		"passport": "^0.4.1",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"pg": "^8.7.1",
